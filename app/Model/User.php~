	public function beforeSave($options = array()) {
		if (!empty($this->data[$this->alias]['pwd'])) {
      	$this->data[$this->alias]['password'] = AuthComponent::password($this->data[$this->alias]['pwd']);
#    	} else {
#    		unset($this->data[$this->alias]['password']);
    	};		
		return true;
}


